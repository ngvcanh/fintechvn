    "connector": "loopback-component-storage",
    "provider": "filesystem",
    "root": "./client/uploads",
    "allowedContentTypes": [
      "image/jpg",
      "image/jpeg",
      "image/png",
      "image/gif",
      "image/tiff",
      "application/pdf",
      "application/msword",
      "application/x-pdf",
