  "restAPI": {
    "name": "restAPI",
    "connector": "rest",
    "debug": true,
    "operations": [
      {
        "template": {
          "method": "{method}",
          "url": "{path}",
          "headers": {
            "accept": "application/json",
            "content-type": "application/json",
            "serectkey": "{serectkey}",
            "access-token": "{accessToken}"
          },
          "body": "{body}",
          "options": {
            "strictSSL": true,
            "useQueryjson": true
          },
          "responsePath": "$"
        },
        "functions": {
          "axios": [
            "method",
            "path",
            "serectkey",
            "accessToken",
            "body"
          ]
        }
