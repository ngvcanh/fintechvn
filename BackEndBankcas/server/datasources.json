{
  "mongodb": {
    "host": "103.1.239.61",
    "port": 27017,
    "database": "fintechdb",
    "password": "FintechVietnam2018",
    "name": "mongodb",
    "user": "BackendAdmin",
    "connector": "mongodb",
    "authSource": "admin",
    "useNewUrlParser": true
  },
  "storagess": {
    "name": "storagess",
    "connector": "loopback-component-storage",
    "provider": "filesystem",
    "root": "./client/uploads",
    "allowedContentTypes": [
      "image/jpg",
      "image/jpeg",
      "image/png",
      "image/gif",
      "image/tiff",
      "application/pdf",
      "application/msword",
      "application/x-pdf",
      "application/acrobat",
      "applications/vnd.pdf",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "application/vnd.ms-excel",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
      "text/plain"
    ],
    "maxFileSize": 20000000
  },
  "restAPI": {
    "name": "restAPI",
    "connector": "rest",
    "debug": true,
    "operations": [
      {
        "template": {
          "method": "{method}",
          "url": "{path}",
          "headers": {
            "accept": "application/json",
            "content-type": "application/json",
            "serectkey": "{serectkey}",
            "access-token": "{accessToken}"
          },
          "body": "{body}",
          "options": {
            "strictSSL": true,
            "useQueryjson": true
          },
          "responsePath": "$"
        },
        "functions": {
          "axios": [
            "method",
            "path",
            "serectkey",
            "accessToken",
            "body"
          ]
        }
      }
    ]
  }
}
